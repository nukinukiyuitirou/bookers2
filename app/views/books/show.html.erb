
<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <%= render 'list', book: @books,user: @book.user %>


<div class='col-md-8 offset-md-1'>
<h1>Book detail</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %>
          <br><%= link_to @book.user.name,user_path(@book.user.id) %></td>
        <td><%= link_to @book.title,book_path %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit",edit_book_path(@book.id),class: "btn btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete,class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>

    </div>
    </div>
</div>

